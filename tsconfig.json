{
  "compilerOptions": {
    /** Base options */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    /** Strictness */
    "strict": true,
    "strictNullChecks": true,
    /** *** */
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "sourceMap": true
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}
